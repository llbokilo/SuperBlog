{% extends 'base.html.twig' %}

{% block title %}BlogMessage index{% endblock %}

{% block body %}
    <h1>BlogMessage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_message in blog_messages %}
            <tr>
                <td>{{ blog_message.id }}</td>
                <td>{{ blog_message.titre }}</td>
                <td>{{ blog_message.message }}</td>
                <td>
                    <a href="{{ path('admin_blog_message_show', {'id': blog_message.id}) }}">show</a>
                    <a href="{{ path('admin_blog_message_edit', {'id': blog_message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_blog_message_new') }}">Create new</a>
{% endblock %}
